    <script>
        const mainImage = document.querySelector('.main-image img');
        const magnifyingGlass = document.querySelector('.magnifying-glass');
        const thumbnailWrappers = document.querySelectorAll('.thumbnail-wrapper');
        let zoomEnabled = window.innerWidth > 768; // Disable zoom on mobile by default

        document.addEventListener('DOMContentLoaded', function () {
            // Apply initial zoom state based on screen size
            const productContainer = document.querySelector('.product-container');
            if (!zoomEnabled) {
                productContainer.classList.add('zoom-disabled');
            }
            
            // Handle window resize to toggle zoom functionality
            window.addEventListener('resize', function() {
                if (window.innerWidth <= 768 && zoomEnabled) {
                    zoomEnabled = false;
                    productContainer.classList.add('zoom-disabled');
                } else if (window.innerWidth > 768 && !zoomEnabled) {
                    zoomEnabled = true;
                    productContainer.classList.remove('zoom-disabled');
                }
            });
            
            // Add zoom toggle button to product container
            const zoomToggle = document.createElement('button');
            zoomToggle.className = 'btn btn-sm btn-outline-secondary position-absolute top-0 end-0 m-2';
            zoomToggle.innerHTML = zoomEnabled ? '<i class="fas fa-search-minus"></i>' : '<i class="fas fa-search-plus"></i>';
            zoomToggle.title = zoomEnabled ? 'Disable zoom' : 'Enable zoom';
            zoomToggle.addEventListener('click', function() {
                zoomEnabled = !zoomEnabled;
                productContainer.classList.toggle('zoom-disabled');
                this.innerHTML = zoomEnabled ? '<i class="fas fa-search-minus"></i>' : '<i class="fas fa-search-plus"></i>';
                this.title = zoomEnabled ? 'Disable zoom' : 'Enable zoom';
            });
            document.querySelector('.main-image').appendChild(zoomToggle);
            
            thumbnailWrappers.forEach(wrapper => {
                wrapper.addEventListener('click', function () {
                    const img = this.querySelector('img');
                    mainImage.setAttribute('src', img.src);
                });
            });

            // Magnifying glass functionality - only works when zoom is enabled
            mainImage.addEventListener('mousemove', function (e) {
                if (!zoomEnabled) return;
                
                const rect = mainImage.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;

                magnifyingGlass.style.left = `${x}px`;
                magnifyingGlass.style.top = `${y}px`;

                const zoomLevel = 2.5;

                const bgX = (x / rect.width) * 100;
                const bgY = (y / rect.height) * 100;
                magnifyingGlass.style.backgroundImage = `url('${mainImage.src}')`;
                magnifyingGlass.style.backgroundSize = `${mainImage.width * zoomLevel}px ${mainImage.height * zoomLevel}px`;
                magnifyingGlass.style.backgroundPosition = `${bgX}% ${bgY}%`;
            });
        });


        document.addEventListener('DOMContentLoaded', function() {
 
    window.addEventListener('scroll', function() {
        const navbar = document.querySelector('.navbar');
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });
});


async function addToCart(productId) {
    const selectedColor = document.querySelector('input[name="color"]:checked'); 

    if (!selectedColor) {
        Swal.fire({
            title: 'Color Required',
            text: 'Please select a color!',
            icon: 'warning',
            confirmButtonColor: '#3085d6'
        });
        return;
    }

    const colorValue = selectedColor.value;

    try {
     
        const stockCheckResponse = await fetch(`/check-stock/${productId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ color: colorValue })
        });

        const stockData = await stockCheckResponse.json();

        if (!stockCheckResponse.ok) {
            throw new Error(stockData.message || 'Error checking stock');
        }

        const { availableStock, currentCartQuantity } = stockData;
        const remainingStock = availableStock - currentCartQuantity;


        
        if (currentCartQuantity >= 5) {
            Swal.fire({
                title: 'Limit Reached',
                text: 'You can only add up to 5 units of this product to your cart',
                icon: 'warning',
                confirmButtonColor: '#3085d6'
            });
            return;
        }

        if (remainingStock <= 0) {
            Swal.fire({
                title: 'Out of Stock',
                text: 'Product is Out Of stock',
                icon: 'error',
                confirmButtonColor: '#3085d6'
            });
            return;
        }

      
        const response = await fetch('/cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId, color: colorValue })
        });

        const data = await response.json();
        
        if (data.success) {
       
            Swal.fire({
                title: 'Added to Cart!',
                text: remainingStock === 1 
                    ? 'Last item in stock!' 
                    : `${remainingStock - 1} items remaining in stock`,
                icon: 'success',
                confirmButtonColor: '#3085d6',
                timer: 2000,
                showConfirmButton: false
            });
            updateCartUI(data.cart);
        } else {
            throw new Error(data.message || 'Failed to add to cart');
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            title: 'Error',
            text: error.message || 'Something went wrong!',
            icon: 'error',
            confirmButtonColor: '#3085d6'
        });
    }
}

    function updateCartUI(cart) {
        const cartCount = document.getElementById('cart-count');
        if (cartCount) {
            cartCount.textContent = cart.items.length;
        }
    }

    
    async function addToWishlist(productId) {
        const selectedColor = document.querySelector('input[name="color"]:checked');

        if (!selectedColor) {
            Swal.fire({
                title: 'Color Required',
                text: 'Please select a color!',
                icon: 'warning',
                confirmButtonColor: '#3085d6'
            });
            return;
        }

        const colorValue = selectedColor.value;

        try {
            const response = await fetch('/wishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId, color: colorValue })
            });

            const data = await response.json();
            
            if (data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: 'Item added to wishlist!',
                    icon: 'success',
                    confirmButtonColor: '#3085d6',
                    timer: 2000,
                    showConfirmButton: false
                });

            } else {
                Swal.fire({
                    title: 'Error',
                    text: data.message || 'Failed to add to wishlist',
                    icon: 'error',
                    confirmButtonColor: '#3085d6'
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                title: 'Error',
                text: 'Something went wrong!',
                icon: 'error',
                confirmButtonColor: '#3085d6'
            });
        }
    }
