    </nav>

    <div class="container-fluid py-5">
        <div class="product-container">
            <div class="row g-0">
                <div class="col-lg-7">
                    <div class="gallery-section">
                        <div class="main-image">
                            <img src="/<%= product.imagePaths[0] %>" alt="<%= product.productName %>">
                            <div class="magnifying-glass"></div>
                        </div>
                        <div class="thumbnails-container">
                            <% product.imagePaths.forEach(imagePath=> { %>
                                <div class="thumbnail-wrapper">
                                    <img src="/<%= imagePath %>" alt="<%= product.productName %>">
                                </div>
                                <% }) %>
                        </div>
                    </div>
                </div>

                <div class="col-lg-5">
                    <div class="product-info">
                        <h1 class="product-title">
                            <%= product.productName %>
                        </h1>
                        <div class="price">
                            <% if (product.offerPrice) { %>
                                <span class="text-decoration-line-through text-muted">$<%= product.price.toFixed(2) %></span>
                                <span class="text-danger ms-2">$<%= product.offerPrice.toFixed(2) %></span>
                                <% const discountPercentage = Math.round((1 - product.offerPrice / product.price) * 100); %>
                                <span class="badge bg-danger ms-2">-<%= discountPercentage %>%</span>
                            <% } else { %>
                                $<%= product.price.toFixed(2) %>
                            <% } %>
                        </div>

                        <div class="product-meta">
                            <div class="meta-item">
                                <span class="fw-medium">Brand</span>
                                <span>
                                    <%= product.brand %>
                                </span>
                            </div>
                            <div class="meta-item">
                                <span class="fw-medium">Category</span>
                                <span>
                                    <%= product.category.name%>
                                </span>
                            </div>
                            <div class="meta-item">
                                <span class="fw-medium">Material</span>
                                <span>
                                    <%= product.material %>
                                </span>
                            </div>
                            <div class="meta-item">
                                <span class="fw-medium">Available colors</span>
                                <div class="variants-list">
                                    <% product.variants.forEach((variant, index) => { %>
                                        <div class="color-radio-wrapper">
                                            <input type="radio" 
                                                   class="color-radio"
                                                   name="color" 
                                                   id="color-<%= index %>" 
                                                   value="<%= variant.color %>"
                                                   style="--color: <%= variant.color %>"
                                                   <%= index === 0 ? 'checked' : '' %>>
                                            <label for="color-<%= index %>" class="color-label">
                                                <%= variant.color %>
                                            </label>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        </div>

                        <p class="product-description">
                            <%= product.productDescription %>
                        </p>

                        <div class="d-grid gap-3">
                            <button onclick="addToCart('<%= product._id %>')" class="btn btn-dark">Add to Cart</button>
                            <button onclick="addToWishlist('<%= product._id %>')" class="btn btn-outline-dark">Add to Wishlist</button>
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="related-products mt-5">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Similar Products</h2>
            <div class="section-divider"></div>
            <p class="section-subtitle">More from this category</p>
        </div>
    
        <div class="related-products-slider swiper">
            <div class="swiper-wrapper">
                <% sameCategoryProducts.forEach(product => { %>
                    <div class="swiper-slide">
                        <div class="product-card">
                            <div class="product-image">
                                <img src="/<%= product.imagePaths[0] %>" alt="<%= product.productName %>">
                                <div class="product-overlay">
                                    <div class="product-actions">
                                        <a href="/product/<%= product._id %>" class="action-btn" title="View">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button class="action-btn" title="Add to Cart">
                                            <i class="fas fa-shopping-cart"></i>
                                        </button>
                                        <button class="action-btn" title="Add to Wishlist">
                                            <i class="fas fa-heart"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="product-info">
                                <h3 class="product-name">
                                    <a href="/product/<%= product._id %>"><%= product.productName %></a>
                                </h3>
                                <div class="product-price">
                                    <% if (product.offerPrice) { %>
                                        <span class="text-decoration-line-through text-muted">$<%= product.price.toFixed(2) %></span>
                                        <span class="text-danger ms-2">$<%= product.offerPrice.toFixed(2) %></span>
                                        <% const discountPercentage = Math.round((1 - product.offerPrice / product.price) * 100); %>
                                        <span class="badge bg-danger ms-2">-<%= discountPercentage %>%</span>
                                    <% } else { %>
                                        $<%= product.price.toFixed(2) %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
           
        </div>
    </section>
    <script>
        const mainImage = document.querySelector('.main-image img');
        const magnifyingGlass = document.querySelector('.magnifying-glass');
        const thumbnailWrappers = document.querySelectorAll('.thumbnail-wrapper');

        document.addEventListener('DOMContentLoaded', function () {
            
            thumbnailWrappers.forEach(wrapper => {
                wrapper.addEventListener('click', function () {
                    const img = this.querySelector('img');
                    mainImage.setAttribute('src', img.src);
                });
            });

            
            mainImage.addEventListener('mousemove', function (e) {
                const rect = mainImage.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;

                
                magnifyingGlass.style.left = `${x}px`;
                magnifyingGlass.style.top = `${y}px`;

                
                const zoomLevel = 2.5;

               
                const bgX = (x / rect.width) * 100;
                const bgY = (y / rect.height) * 100;
                magnifyingGlass.style.backgroundImage = `url('${mainImage.src}')`;
                magnifyingGlass.style.backgroundSize = `${mainImage.width * zoomLevel}px ${mainImage.height * zoomLevel}px`;
                magnifyingGlass.style.backgroundPosition = `${bgX}% ${bgY}%`;
            });
        });


        document.addEventListener('DOMContentLoaded', function() {
 
    window.addEventListener('scroll', function() {
        const navbar = document.querySelector('.navbar');
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });
});

// Add to Cart functionality
async function addToCart(productId) {
    const selectedColor = document.querySelector('input[name="color"]:checked'); 

    if (!selectedColor) {
        alert("Please select a color!");
        return;
    }

    const colorValue = selectedColor.value; // Get the selected color

    try {
        const response = await fetch('/cart', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ productId, color: colorValue }) // Send selected color
        });

        const data = await response.json();
        
        if (data.success) {
            alert('Item added to cart!');
            updateCartUI(data.cart);
        } else {
            alert(data.message);
        }
    } catch (error) {
        console.error('Error:', error);
        alert('Something went wrong!');
    }
}

    function updateCartUI(cart) {
        const cartCount = document.getElementById('cart-count');
        if (cartCount) {
            cartCount.textContent = cart.items.length;
        }
    }

    // Add to Wishlist functionality
    async function addToWishlist(productId) {
        const selectedColor = document.querySelector('input[name="color"]:checked');

        if (!selectedColor) {
            alert("Please select a color!");
            return;
        }

        const colorValue = selectedColor.value;

        try {
            const response = await fetch('/wishlist', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId, color: colorValue })
            });

            const data = await response.json();
            
            if (data.success) {
                alert('Item added to wishlist!');
                // You can update wishlist UI here if needed
            } else {
                alert(data.message || 'Failed to add to wishlist');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Something went wrong!');
        }
    }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>