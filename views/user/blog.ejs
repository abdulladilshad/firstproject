    <link rel="stylesheet" href="/styles/homePage.css">

    <style>
        /* Remove navbar styles and add back to home button styles */
        .back-to-home {
            position: fixed;
            top: 20px;
            left: 20px;
            z-index: 1000;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-family: 'Jost', sans-serif;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .back-to-home:hover {
            background: rgba(0, 0, 0, 0.9);
            color: #c0a080;
            transform: translateY(-2px);
        }

        .back-to-home i {
            font-size: 1.1rem;
        }

        /* Remove navbar margin from blog header */
        .blog-header {
            margin-top: 0;
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/images/blog-header.jpg');
            background-size: cover;
            background-position: center;
            height: 400px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            margin-bottom: 50px;
        }

        .blog-header h1 {
            font-family: 'Marcellus', serif;
            font-size: 3.5rem;
            margin-bottom: 20px;
        }

        .blog-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .blog-post {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
            margin-bottom: 30px;
        }

        .blog-post:hover {
            transform: translateY(-5px);
        }

        .blog-post img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .blog-post-content {
            padding: 25px;
        }

        .blog-post h2 {
            font-family: 'Jost', sans-serif;
            font-size: 1.8rem;
            margin-bottom: 15px;
            color: #333;
        }

        .blog-post h2 a {
            color: #333;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .blog-post h2 a:hover {
            color: #c0a080;
        }

        .blog-post p {
            color: #666;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .read-more {
            display: inline-block;
            padding: 10px 25px;
            background: #c0a080;
            color: white;
            text-decoration: none;
            border-radius: 25px;
            transition: background 0.3s ease;
        }

        .read-more:hover {
            background: #a88860;
            color: white;
        }

        .blog-sidebar {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .blog-sidebar h3 {
            font-family: 'Jost', sans-serif;
            font-size: 1.4rem;
            margin-bottom: 20px;
            color: #333;
            padding-bottom: 10px;
            border-bottom: 2px solid #c0a080;
        }

        .blog-sidebar ul {
            list-style: none;
            padding: 0;
        }

        .blog-sidebar ul li {
            margin-bottom: 12px;
        }

        .blog-sidebar ul li a {
            color: #666;
            text-decoration: none;
            transition: color 0.3s ease;
            display: flex;
            align-items: center;
        }

        .blog-sidebar ul li a:hover {
            color: #c0a080;
        }

        .blog-sidebar ul li a i {
            margin-right: 10px;
            color: #c0a080;
        }

        .social-icons {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .social-icons a {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f5f5f5;
            border-radius: 50%;
            color: #333;
            transition: all 0.3s ease;
        }

        .social-icons a:hover {
            background: #c0a080;
            color: white;
            transform: translateY(-3px);
        }

        @media (max-width: 991px) {
            .blog-header h1 {
                font-size: 2.5rem;
            }
            
            .blog-post img {
                height: 250px;
            }
        }
    </style>
</head>
