<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="/styles/userlogin.css">
</head>
<body>
  <div class="login-box">
    <h2>Login</h2>
    <h4 style="color:rgba(219, 210, 210, 0.982) "><%= message %></h4>
    <form action="/user/login" method="post">
      <div class="user-box">
        <input type="email" name="email" id="email" />
        <label>Email</label>
      </div>
      <div class="user-box">
        <input type="password" name="password" id="password" />
        <label>Password</label>
      </div>
      <div class="submit">
        <button type="submit">Submit</button>
      </div>
      <a href="/user/register" class="submitt">Go to register</a>
    </form>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelector('form').addEventListener('submit', formvalidate);
    });

    const message = "<%= message %>";

    if (message) {
      alert(message);
    }

    function formvalidate(e) {
      e.preventDefault();

      var email = document.getElementById('email').value;
      var password = document.getElementById('password').value;

      if (email === "" || password === "") {
        Swal.fire("All fields are required");
        return false;
      }

      e.target.submit();
      return true;
    }
  </script>
</body>
</html>
