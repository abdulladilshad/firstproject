<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link rel="stylesheet" href="/styles/admiUsers.css">
</head>
<body>
    <div class="dashboard-container">
        <aside class="sidebar">
            <h2>Admin Panel</h2>
            <ul class="sidebar-menu">
                <li><a href="/admin/dashboard">Dashboard</a></li>
                <li><a href="/admin/products">Products</a></li>
                <li><a href="/admin/orders">Orders</a></li>
                <li><a href="/admin/users" class="active">Users</a></li>
                <li><a href="/admin/categories">Categories</a></li>
                <li><a href="/admin/offers">Offers</a></li>
                <li><a href="/admin/settings">Settings</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </aside>
        <main class="main-content">
            <header class="topbar">
                <h1>User Management</h1>
                <div class="topbar-actions">
                    <input
                        type="text"
                        placeholder="Search users..."
                        class="search-bar"
                        value=""
                        oninput="window.location.href = '/admin/users?search=' + this.value"
                    >
                    <a href="/admin/addusers"><button class="add-button">Add User</button></a>
                </div>
            </header>
            <section class="user-table">
                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                         <!-- Dynamic rows rendered using EJS -->
                        <% users.forEach((user, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            <td><%= user.createdAt.toDateString() %></td>
                            <td>
                                <a href="/admin/editusers/<%= user._id %>"><button>Edit</button></a>
                                <button onclick="deleteUser('<%= user._id %>')">Delete</button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </section>
            
        </main>
    </div>

    <!-- Include SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function deleteUser(userId) {
            if (confirm('Are you sure you want to delete this user?')) {
                fetch('/admin/users/delete/' + userId, { method: 'DELETE' })
                    .then(response => {
                        if (response.ok) {
                            alert('User deleted successfully');
                            window.location.reload();
                        } else {
                            alert('Failed to delete user');
                        }
                    });
            }
        }
    </script>
</body>
</html>
